    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run All Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/truffle/build/cli.bundled.js",
            "args": [
                "test",
                "test/ETHWasabiPool_CallOption.test.ts"
            ],
            "cwd": "${workspaceRoot}",
            "outFiles": [
                "${workspaceRoot}/test/**/*"
            ],
        },
        {
            "name": "Run All Tests (show events)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/truffle/build/cli.bundled.js",
            "args": [
                "test",
                "--show-events"
            ],
            "cwd": "${workspaceRoot}",
            "outFiles": [
                "${workspaceRoot}/test/**/*"
            ],
        }
    ]
}